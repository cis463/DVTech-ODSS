    private string GetStockStatus(InventoryItem item)
    {
        if (item.Quantity <= item.MinimumStockLevel)
            return "Low Stock";
        else if (item.Quantity >= item.HighStockLevel)
            return "High Stock";
        else
            return "Good Stock";
    }

    private string GetStockStatusBadgeClass(InventoryItem item)
    {
        if (item.Quantity <= item.MinimumStockLevel)
            return "bg-danger";
        else if (item.Quantity >= item.HighStockLevel)
            return "bg-success";
        else
            return "bg-primary";
    }

