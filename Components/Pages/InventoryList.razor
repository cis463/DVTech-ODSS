    private bool IsFormValid()
    {
        ValidateItemName();
        ValidateBrand();
        ValidateCategory();
        ValidateUnit();
        ValidateDescription();
        ValidateQuantity();
        ValidateMinStock();
        ValidateHighStock();
        ValidatePrice();

        return !itemNameError && !brandError && !categoryError && !unitError &&
               !descriptionError && !quantityError && !minStockError &&
               !highStockError && !priceError;
    }

